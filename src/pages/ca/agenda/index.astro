---
import { getCollection } from "astro:content";
import PostCardCA from "@/components/PostCardCA.astro";
import Section from "@/components/Section.astro";
import Layout from "@/layouts/Layout.astro";

const agendaPosts = await getCollection("agendaCA");
const recursosConAgenda = (await getCollection("recursosCA"))
  .filter(post => post.data.categories.includes("agenda"));

// Combinar ambas fuentes y ordenar por fecha
const allPosts = [...agendaPosts, ...recursosConAgenda]
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="Agenda">
  <Section title="Agenda">
    <div class="w-full grid grid-cols-1 md:grid-cols-2 gap-4">
      {
        allPosts.map((post) => (
          <PostCardCA
            slug={post.id}
            title={post.data.title}
            excerpt={post.data.description}
            date={post.data.pubDate}
          />
        ))
      }
    </div>
  </Section>
</Layout>