<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hackerspace Castellón</title>
    
    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    
    <!-- Redirección inmediata con JavaScript -->
    <script>
        (function() {
            'use strict';
            
            function detectLanguage() {
                const supportedLocales = ['es', 'ca', 'en'];
                const defaultLocale = 'es';
                
                // Obtener idioma del navegador
                const browserLang = (navigator.language || navigator.userLanguage || '').toLowerCase();
                
                // Priorizar idiomas específicos
                if (browserLang.startsWith('en')) return 'en';
                if (browserLang.startsWith('ca') || browserLang.startsWith('val')) return 'ca';
                if (browserLang.startsWith('es')) return 'es';
                
                return defaultLocale;
            }
            
            // Ejecutar redirección inmediatamente
            const targetLang = detectLanguage();
            const targetUrl = `/${targetLang}/`;
            
            // Debug para ver qué idioma detecta
            console.log('Navegador:', navigator.language);
            console.log('Redirigiendo a:', targetUrl);
            
            // Redirección inmediata
            window.location.replace(targetUrl);
        })();
    </script>
    
    <!-- Estilos HackCS mientras redirecciona -->
    <style>
        body {
            font-family: 'Courier New', monospace;
            background: #000000;
            color: #00ff00;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            text-align: center;
        }
        
        .container {
            max-width: 400px;
            padding: 2rem;
        }
        
        .logo {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 1rem;
            color: #00ff00;
            text-shadow: 0 0 10px #00ff00;
            font-family: 'Courier New', monospace;
        }
        
        .loading {
            margin: 1rem 0;
        }
        
        .spinner {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 2px solid #00ff00;
            border-radius: 50%;
            border-top-color: transparent;
            animation: spin 0.8s linear infinite;
            filter: drop-shadow(0 0 5px #00ff00);
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        .message {
            font-size: 0.9rem;
            opacity: 0.8;
            margin: 1rem 0;
        }
        
        .fallback-links {
            margin-top: 2rem;
            font-size: 0.8rem;
        }
        
        .fallback-links a {
            color: #00ff00;
            text-decoration: none;
            border: 1px solid #00ff00;
            padding: 0.5rem 1rem;
            display: inline-block;
            margin: 0.25rem;
            background: transparent;
            transition: all 0.3s ease;
        }
        
        .fallback-links a:hover {
            background: #00ff00;
            color: #000;
            box-shadow: 0 0 10px #00ff00;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="logo">HackCS</div>
        <div class="loading">
            <div class="spinner"></div>
        </div>
        <div class="message">Detectando idioma...</div>
        
        <!-- Enlaces de emergencia -->
        <div class="fallback-links">
            <div style="margin-bottom: 1rem;">Selecciona idioma:</div>
            <a href="/es/">Español</a>
            <a href="/ca/">Català</a>
            <a href="/en/">English</a>
        </div>
    </div>
</body>
</html>