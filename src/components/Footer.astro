---
const today = new Date();
import fb from "@/images/fb.png";
import tw from "@/images/tw.png";
import gm from "@/images/gm.png";
import ubi from "@/images/ubi.png";
import ig from "@/images/ig.png";
import ujimotor from "@/images/ujimotor.png";
import laplantilla from "@/images/plantilla.png";
import motostudent from "@/images/motostudent.png";
